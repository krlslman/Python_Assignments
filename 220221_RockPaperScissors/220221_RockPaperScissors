            self.pic_p2.setPixmap(QtGui.QPixmap(r"C:\Users\koral\Desktop\CLARUSWAY\For GitHub\Assigments & SelfProjects\220221_RockPaperScissors\scissors.png"))
        else:
            print("Error 113")
        # -----------------------PLAYER 1-----------------
        # clickedname =""
        if clickedname == "R":
            self.pic_p1.setPixmap(QtGui.QPixmap(r"C:\Users\koral\Desktop\CLARUSWAY\For GitHub\Assigments & SelfProjects\220221_RockPaperScissors\rock.png"))
        elif clickedname == "P":
            self.pic_p1.setPixmap(QtGui.QPixmap(r"C:\Users\koral\Desktop\CLARUSWAY\For GitHub\Assigments & SelfProjects\220221_RockPaperScissors\paper.png"))
