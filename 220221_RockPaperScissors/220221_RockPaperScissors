    def the_round(self):
        # ------------------------NFC--------------------
        cpu_choice = choice(["R","P","S","R","P","S","R","P","S","R","P","S","R","P","S","R","P","S","R","P","S","R","P","S","R","P","S","R","P","S"])
        if cpu_choice == "R":
